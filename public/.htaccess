# Enable MultiViews option
Options +MultiViews

# Turn on the rewrite engine
RewriteEngine On

# Set the base URL for the rewrite rules
RewriteBase /Concursonaire/public

# If the requested resource is not a directory
RewriteCond %{REQUEST_FILENAME} !-d

# If the requested resource is not a file
RewriteCond %{REQUEST_FILENAME} !-f

# Rewrite the request to index.php with the original URL as a query parameter
RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
